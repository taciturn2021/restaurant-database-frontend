<!-- views/orders/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body>
<%- include('../partials/nav') %>

<div class="container">
    <div class="header-section">
        <h2>Orders</h2>
        <a href="/orders/new" class="btn btn-primary">Create New Order</a>
    </div>

    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger">
            <%= error %>
        </div>
    <% } %>

    <div class="table-container">
        <h3>Current Orders</h3>
        <table>
            <thead>
            <tr>
                <th>Order ID</th>
                <th>Table</th>
                <th>Waiter</th>
                <th>Status</th>
                <th>Total Amount</th>
                <th>Order Time</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            <% if (currentOrders && currentOrders.length > 0) { %>
                <% currentOrders.forEach(order => { %>
                    <tr>
                        <td><%= order._id %></td>
                        <td><%= order.table_id.number %></td>
                        <td><%= order.waiter_id.name %></td>
                        <td><%= order.status %></td>
                        <td>$<%= order.total_amount.toFixed(2) %></td>
                        <td><%= new Date(order.order_time).toLocaleString() %></td>
                        <td class="action-buttons">
                            <a href="/orders/<%= order._id %>" class="btn btn-info btn-sm">View</a>
                            <button
                                    onclick="updateOrderStatus('<%= order._id %>')"
                                    class="btn btn-primary btn-sm">
                                <%= order.status === 'open' ? 'Start Serving' : 'Complete Order' %>
                            </button>
                        </td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="7" class="text-center">No current orders</td>
                </tr>
            <% } %>
            </tbody>
        </table>

        <h3 class="mt-4">Past Orders</h3>
        <table>
            <thead>
            <tr>
                <th>Order ID</th>
                <th>Table</th>
                <th>Waiter</th>
                <th>Total Amount</th>
                <th>Completion Time</th>
                <th>Review</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            <% if (pastOrders && pastOrders.length > 0) { %>
                <% pastOrders.forEach(order => { %>
                    <tr>
                        <td><%= order._id %></td>
                        <td><%= order.table_id.number %></td>
                        <td><%= order.waiter_id.name %></td>
                        <td>$<%= order.total_amount.toFixed(2) %></td>
                        <td><%= new Date(order.completion_time).toLocaleString() %></td>
                        <td>
                            <% if (order.review) { %>
                                <%= "⭐".repeat(order.review.rating) %>
                            <% } else { %>
                                No review
                            <% } %>
                        </td>
                        <td class="action-buttons">
                            <a href="/orders/<%= order._id %>" class="btn btn-info btn-sm">View</a>
                        </td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="7" class="text-center">No past orders</td>
                </tr>
            <% } %>
            </tbody>
        </table>
    </div>
</div>

<script>
    function updateOrderStatus(orderId) {
        fetch(`/orders/${orderId}/status`, {
            method: 'PATCH',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                status: 'in-progress'
            })
        })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    window.location.reload();
                }
            })
            .catch(error => console.error('Error:', error));
    }
</script>
</body>
</html>