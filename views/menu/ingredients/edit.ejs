<!DOCTYPE html>
<html lang="en">
<%- include('../../partials/head') %>
<body>
<%- include('../../partials/nav') %>

<div class="container">
    <div class="header-section">
        <h2>Edit Ingredient</h2>
        <a href="/menu/ingredients" class="btn btn-secondary">Back to Ingredients</a>
    </div>

    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger">
            <%= error %>
        </div>
    <% } %>

    <div class="order-form">
        <form action="/menu/ingredients/<%= ingredient._id %>" method="POST" class="form">
            <div class="form-group">
                <label>Name:</label>
                <input type="text" name="name" value="<%= ingredient.name %>" required class="form-input">
            </div>

            <div class="form-group">
                <label>Quantity:</label>
                <input type="number" name="quantity" value="<%= ingredient.quantity %>" required class="form-input">
            </div>

            <div class="form-group">
                <label>Unit:</label>
                <input type="text" name="unit" value="<%= ingredient.unit %>" required class="form-input">
            </div>

            <div class="form-group">
                <label>Cost:</label>
                <input type="number" step="0.01" name="cost" value="<%= ingredient.cost %>" required class="form-input">
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a href="/menu/ingredients" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

</body>
</html>