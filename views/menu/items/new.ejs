<!DOCTYPE html>
<html lang="en">
<%- include('../../partials/head') %>
<body>
<%- include('../../partials/nav') %>

<div class="container">
    <div class="header-section">
        <h2>Add New Menu Item</h2>
        <a href="/menu/items" class="btn btn-secondary">Back to Menu Items</a>
    </div>

    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger">
            <%= error %>
        </div>
    <% } %>

    <div class="order-form">
        <form action="/menu/items" method="POST" class="form">
            <div class="form-group">
                <label>Name:</label>
                <input type="text" name="name" required class="form-input">
            </div>

            <div class="form-group">
                <label>Description:</label>
                <textarea name="description" class="form-input"></textarea>
            </div>

            <div class="form-group">
                <label>Price:</label>
                <input type="number" step="0.01" name="price" required class="form-input">
            </div>

            <div class="form-group">
                <label>Category:</label>
                <input type="text" name="category" class="form-input">
            </div>

            <div class="form-group">
                <p>Available?</p>
                <label>
                    <input type="radio" name="is_available" value="1" checked> Yes
                </label>
                <label style="margin-left: 10px;">
                    <input type="radio" name="is_available" value="0"> No
                </label>
            </div>

            <div class="form-group">
                <label>Ingredients:</label>
                <p>Select existing ingredients (check all that apply):</p>
                <% ingredients.forEach(ingredient => { %>
                    <div style="margin-bottom: 8px;">
                        <input
                                type="checkbox"
                                name="selectedIngredients[<%= ingredient._id %>]"
                                value="<%= ingredient._id %>"
                        >
                        <%= ingredient.name %> (<%= ingredient.unit %>)
                    </div>
                <% }) %>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Create Item</button>
                <a href="/menu/items" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

</body>
</html>